@model assignment1.Models.Hall

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Hall</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
           
           
            <div class="form-group">
                <label asp-for="costPerDay" class="control-label"></label>
                <input asp-for="costPerDay" class="form-control" />
                <span asp-validation-for="costPerDay" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Get Halls" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
